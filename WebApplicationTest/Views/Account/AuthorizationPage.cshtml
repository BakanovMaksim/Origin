@model User

@{
    ViewBag.Title = "Авторизация";
}

    <form asp-controller="account" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <span asp-validation-for="Login"></span><br />
        <span asp-validation-for="Password"></span>
        <div class="textbox">
            <label asp-for="Login"></label>
            <input type="text" asp-for="Login" placeholder="Введите логин" />
        </div>
        <div class="textbox">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" placeholder="Введите пароль" />
        </div>

        <input class="button" type="submit" value="Войти" />

        <a asp-action="RegistrationPage">Регистрация</a>
    </form>


