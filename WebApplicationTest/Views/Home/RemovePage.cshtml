@model User

@{
    ViewBag.Title = "Удаление данных";
}

    <div>
        <dl>
            <dt>Имя</dt>
            <dd>
                @Html.DisplayFor(x => x.FirstName)
            </dd>

            <dt>Фамилия</dt>
            <dd>
                @Html.DisplayFor(x => x.LastName)
            </dd>

            <dt>Логин</dt>
            <dd>
                @Html.DisplayFor(x => x.Login)
            </dd>
        </dl>

        <div>
            <form asp-controller="home" asp-action="RemovePage" method="post">
                <input class="button" type="submit" value="Удалить" />
            </form>
        </div>
    </div>

