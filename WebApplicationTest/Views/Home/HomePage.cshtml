@model System.Collections.Generic.IEnumerable<User>

@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Главная</title>
    <link rel="stylesheet" href="~/css/home.css" />
</head>
<body>
    <a class="button_registration" asp-controller="account" asp-action="AuthorizationPage">Войти</a>
    <a class="button_registration" asp-controller="account" asp-action="RegistrationPage">Зарегистрироваться</a>

    <h1>Пользователь - @ViewBag.Message</h1><hr />

        <table class="table_users">
            <caption>Пользователи</caption>
            <tr><th>№</th><th>Пользователь</th><th>Роль</th></tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>@item.Id</td>
            <td>@item</td>
            <td>@item.Role</td>
            <td><a asp-action="InformationPage" asp-controller="home" asp-route-id="@item.Id">Информация</a></td>
            <td><a asp-action="EditPage" asp-controller="home" asp-route-id="@item.Id">Изменение</a></td>
            <td><a asp-action="RemovePage" asp-controller="home" asp-route-id="@item.Id">Удалить</a></td>
        </tr>
            }
        </table>
</body>
</html>

