@model User

@{
    ViewBag.Title = "Изменение данных";
}

    <form asp-action="EditPage" asp-controller="home" asp-route-id="@Model.Id">
        <div asp-validation-summary="All"></div>
        <div class="textbox">
            <label asp-for="FirstName"></label>
            <input type="text" asp-for="FirstName" placeholder="Введите имя" />
        </div>
        <div class="textbox">
            <label asp-for="LastName"></label>
            <input type="text" asp-for="LastName" placeholder="Введите фамилию" />
        </div>
        <div class="textbox">
            <label asp-for="Login"></label>
            <input type="text" asp-for="Login" placeholder="Введите логин" />
        </div>
        <div class="textbox">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" placeholder="Введите пароль" />
        </div>

            <input class="button" type="submit" value="Сохранить" />
    </form>

